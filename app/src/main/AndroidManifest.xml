<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.luqman.dev.helloworld">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.mycorp.javachallengefour.activities.DetailUser">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mycorp.javachallengefour.activities.SecondActivity"/>
        </activity>
        <activity android:name="com.mycorp.javachallengefour.activities.SecondActivity"
            android:theme="@style/FullTheme"/>
        <activity android:name="com.mycorp.javachallengefour.activities.TermActivity"
            android:theme="@style/FullTheme"/>
        <activity
            android:name="com.mycorp.javachallengefour.activities.SplashActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/FullTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.mycorp.javachallengefour.activities.MainActivity" />
    </application>

</manifest>